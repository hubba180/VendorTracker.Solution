@using System;
@using System.Collections.Generic;
@using VendorTracker.Models;

<h1>@Model["vendor"].Name @Model["vendor"].Id</h1>

@if (Model["orders"].Count == 0)
{
  <h4>There are no orders associated with this vendor</h4>
}
<ul>
  @foreach (Order element in Model["orders"])
  {
    <li><a href="/vendors/@Model["vendor"].Id/orders/@Model["orders"].Id/show">@element.Quantity @element.Type's</a></li>
  }
</ul>
<br>
<br>
<a href="/vendors/@Model["vendor"].Id/orders/new">add a new order to this vendor</a><br>
<a href="/">Home</a>